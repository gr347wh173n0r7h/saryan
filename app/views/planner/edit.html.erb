        <!-- ADD SEMESTER BUTTON-->
        <div id="AddSem" class="column all-100 align-right half-top-space half-bottom-space condensed">
          <div id="SemP" class="ProgressB align-center">
            <div id="SemPB" class="ProgressBar align-center"></div>
            <p>Add Semester</p>
          </div>
